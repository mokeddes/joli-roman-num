{
  "name": "back-end",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev-back": "concurrently --kill-others -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon --config ./nodemon.json\"",
    "start-back": "tsc && node dist-back/src/index.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "dev-front": "parcel watch client/index.html -d public --public-url ./",
    "build-front": "parcel build ./client/index.html",
    "dev-all": "concurrently \"npm run dev-front\" \"npm run dev-back\"",
    "start-all": "npm run build-front && npm run start-back",
    "test": "jest",
    "test-e2e": "jest -c tests/e2e/jest.config.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/expect-puppeteer": "^3.3.3",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/puppeteer": "^1.20.2",
    "body-parser": "^1.19.0",
    "celebrate": "git+https://git@github.com/mokeddes/celebrate.git",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "parcel": "^1.12.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.3",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "concurrently": "^5.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "fast-check": "^1.18.1",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.3.0",
    "nodemon": "^1.19.4",
    "parcel-bundler": "^1.12.4",
    "puppeteer": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
